<div class="row">
  <!-- Estatísticas Rápidas -->
  <div class="col-12 mb-4">
    <div class="row g-3">
      <div class="col-md-3">
        <div class="card bg-primary text-white">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="flex-grow-1">
                <h4 class="card-title mb-0"><%= estatisticas.total || 0 %></h4>
                <small>Total de Cedentes</small>
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-users fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-warning text-dark">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="flex-grow-1">
                <h4 class="card-title mb-0">
                  <%= estatisticas.proximosVencimento || 0 %>
                </h4>
                <small>Próximos do Vencimento</small>
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-clock fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-danger text-white">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="flex-grow-1">
                <h4 class="card-title mb-0">
                  <%= estatisticas.vencidos || 0 %>
                </h4>
                <small>Contratos Vencidos</small>
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-success text-white">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="flex-grow-1">
                <h4 class="card-title mb-0">
                  <% const emDia = (estatisticas.total || 0) - (estatisticas.vencidos || 0) - (estatisticas.proximosVencimento || 0) %> 
                  <%= emDia > 0 ? emDia : 0 %>
                </h4>
                <small>Em Dia</small>
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-check-circle fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Cards de Status -->
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-header bg-dark text-white">
        <h5 class="card-title mb-0">
          <i class="fas fa-chart-pie me-2"></i>Distribuição por Status
        </h5>
      </div>
      <div class="card-body">
        <% if (statusMeta && statusMeta.length > 0) { %>
          <% statusMeta.forEach(status => { %>
          <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded <%= status.count > 0 ? 'bg-light' : '' %>">
            <div class="d-flex align-items-center">
              <i class="<%= status.icon %> me-2 text-<%= status.color %>"></i>
              <span class="small"><%= status.title %></span>
            </div>
            <span class="badge bg-<%= status.color %>"><%= status.count %></span>
          </div>
          <% }); %>
        <% } else { %>
          <div class="text-center text-muted py-3">
            <i class="fas fa-chart-pie fa-2x mb-2"></i>
            <p>Nenhum dado disponível</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Ações Rápidas -->
  <div class="col-md-8 mb-4">
    <div class="card h-100">
      <div class="card-header bg-dark text-white">
        <h5 class="card-title mb-0">
          <i class="fas fa-bolt me-2"></i>Ações Rápidas
        </h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <button class="btn btn-outline-primary w-100 h-100 py-3" data-bs-toggle="modal" data-bs-target="#novoCedenteModal">
              <i class="fas fa-user-plus fa-2x mb-2"></i><br />
              Novo Cedente
            </button>
          </div>
          <div class="col-md-6">
            <button class="btn btn-outline-success w-100 h-100 py-3" data-bs-toggle="modal" data-bs-target="#importModal">
              <i class="fas fa-file-import fa-2x mb-2"></i><br />
              Importar Excel
            </button>
          </div>
          <div class="col-md-6">
            <button class="btn btn-outline-info w-100 h-100 py-3" onclick="exportarExcel()">
              <i class="fas fa-file-export fa-2x mb-2"></i><br />
              Exportar Dados
            </button>
          </div>
          <div class="col-md-6">
            <button class="btn btn-outline-danger w-100 h-100 py-3" onclick="confirmarExclusaoTodos()">
              <i class="fas fa-trash fa-2x mb-2"></i><br />
              Limpar Tudo
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Lista de Cedentes -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">
          <i class="fas fa-list me-2"></i>Lista de Cedentes
        </h5>
        <span class="badge bg-warning text-dark" id="total-cedentes-filtro">
          <%= total %> cedente<%= total !== 1 ? 's' : '' %>
        </span>
      </div>
      <div class="card-body">
        <!-- Filtros -->
        <div class="row mb-3">
          <div class="col-md-6">
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-search"></i>
              </span>
              <input type="text" id="search" class="form-control" placeholder="Buscar por nome ou CPF/CNPJ...">
            </div>
          </div>
          <div class="col-md-4">
            <select id="status-filter" class="form-select">
              <option value="">Todos os status</option>
              <% if (statusMeta && statusMeta.length > 0) { %>
                <% statusMeta.forEach(status => { %>
                <option value="<%= status.key %>"><%= status.title %></option>
                <% }); %>
              <% } %>
            </select>
          </div>
          <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100" onclick="carregarCedentes()">
              <i class="fas fa-sync-alt"></i>
            </button>
          </div>
        </div>

        <!-- Tabela -->
        <div class="table-responsive">
          <table class="table table-hover" id="tabelaCedentes">
            <thead class="table-dark">
              <tr>
                <th>Nome/Razão Social</th>
                <th>CPF/CNPJ</th>
                <th>Status</th>
                <th>Data Validade</th>
                <th width="120">Ações</th>
              </tr>
            </thead>
            <tbody>
              <!-- JavaScript irá preencher aqui -->
            </tbody>
          </table>
        </div>

        <!-- Paginação -->
        <% if (totalPages > 1) { %>
        <nav>
          <ul class="pagination justify-content-center">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage - 1 %>">Anterior</a>
            </li>

            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>

            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">Próxima</a>
            </li>
          </ul>
        </nav>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Incluir modals -->
<%- include('../partials/modals') %>

<script src="/js/cedentes.js"></script>
# Flask Configuration
SECRET_KEY=sua-chave-secreta-muito-longa-e-aleatoria-aqui
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Database (escolha um)
# Para SQLite (desenvolvimento):
CEDENTES_DB_PATH=instance/cedentes.db

# Para PostgreSQL (produção):
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/goldcredit

# Admin User (primeiro acesso)
ADMIN_EMAIL=admin@goldcreditsa.com.br
ADMIN_PASSWORD=SuaSenhaSeguraAqui2025!

# Server
PORT=5000

# Session (produção)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO

# Backup
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

